// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  name       String
  password   String
  role       Role    @default(USER)
  profileUrl String?

  friends   User[] @relation("Friends") // User has these friends
  friendsOf User[] @relation("Friends") // User is a friend of others

  events         Event[] @relation("EventOwner")
  participatesIn Event[] @relation("Participants")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FriendRquest {
  fromUser   Int
  toUser     Int
  acceptedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([fromUser, toUser])
}

model Event {
  id      Int  @id @default(autoincrement())
  owner   User @relation(name: "EventOwner", fields: [ownerId], references: [id])
  ownerId Int

  participants User[]         @relation("Participants")
  comments     EventComment[]

  name            String
  category        String
  startsAt        DateTime
  duration        Int
  location        String
  privacy         String
  maxParticipants Int
  photoUrl        String?
  coordinateLat   Float?
  coordinateLon   Float?
  remarks         String?  @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EventComment {
  id      Int    @id @default(autoincrement())
  event   Event  @relation(fields: [eventId], references: [id])
  eventId Int
  text    String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}
